;; -*- lisp-version: "6.0.pre-final.9 [Windows] (Oct 18, 2000 13:49)"; common-graphics: "1.389.2.34"; form: coefficient-dialog; -*-
;;;
;;; Define :coefficient-dialog
 
(in-package :common-graphics-user)

;; The finder-function, which returns the window if it already
;; exists, and otherwise creates and returns it.
;; Call this function if you need only one copy of this window,
;; and that window is a non-owned top-level window.
(defun coefficient-dialog ()
  (find-or-make-application-window :coefficient-dialog
    'make-coefficient-dialog))
 
;; The maker-function, which always creates a new window.
;; Call this function if you need more than one copy,
;; or the single copy should have a parent or owner window.
;; (Pass :owner to this function; :parent is for compatibility.)
(defun make-coefficient-dialog
    (&key parent (owner (or parent (screen *system*)))
     (exterior (make-box 176 100 476 266)) (name :coefficient-dialog)
     (title "Coefficients") (border :frame) (child-p nil) form-p)
  (let ((owner
         (make-window name :owner owner
           :class 'coefficient-dialog
           :exterior exterior
           :border border
           :child-p child-p
           :close-button t
           :cursor-name :arrow-cursor
           :font (make-font-ex :swiss "MS Sans Serif / ANSI" 11 nil)
           :form-state :normal
           :maximize-button nil
           :minimize-button nil
           :name :coefficient-dialog
           :package-name :common-graphics-user
           :pop-up nil
           :resizable nil
           :scrollbars nil
           :state :normal
           :status-bar nil
           :system-menu t
           :title title
           :title-bar t
           :toolbar nil
           :dialog-items (coefficient-dialog-widgets)
           :form-p form-p
           :help-string nil
           :package-name :common-graphics-user)))
    owner))

(defun make-coefficient-dialog-widgets ()
  (list (make-instance 'static-text :font
                       (make-font-ex nil "Tahoma / ANSI" 11 nil)
                       :height 14 :left 24 :name :a-text :top 16 :value
                       "~A:" :width 13)
        (make-instance 'editable-text :font
                       (make-font-ex nil "Tahoma / ANSI" 11 nil) :left
                       37 :name :a-coefficient-text :template-string
                       nil :top 16 :up-down-control
                       :a-coefficient-control :value "1" :width 43)
        (make-instance 'up-down-control :buddy-widget
                       :a-coefficient-text :height 22 :left 78 :name
                       :a-coefficient-control :range '(1 1000) :top 16
                       :value 1)
        (make-instance 'up-down-control :buddy-widget
                       :b-coefficient-text :height 22 :left 163 :name
                       :b-coefficient-control :range '(1 1000) :top 16
                       :value 1)
        (make-instance 'editable-text :font
                       (make-font-ex nil "Tahoma / ANSI" 11 nil) :left
                       122 :name :b-coefficient-text :template-string
                       nil :top 16 :up-down-control
                       :b-coefficient-control :value "1" :width 43)
        (make-instance 'static-text :font
                       (make-font-ex nil "Tahoma / ANSI" 11 nil)
                       :height 14 :left 109 :name :b-text :top 16
                       :value "~B:" :width 13)
        (make-instance 'up-down-control :buddy-widget
                       :c-coefficient-text :height 22 :left 246 :name
                       :c-coefficient-control :range '(1 1000) :top 16
                       :value 1)
        (make-instance 'static-text :font
                       (make-font-ex nil "Tahoma / ANSI" 11 nil)
                       :height 14 :left 190 :name :c-text :top 16
                       :value "~B:" :width 13)
        (make-instance 'editable-text :font
                       (make-font-ex nil "Tahoma / ANSI" 11 nil) :left
                       205 :name :c-coefficient-text :template-string
                       nil :top 16 :up-down-control
                       :c-coefficient-control :value "1" :width 43)
        (make-instance 'lisp-group-box :contained-widgets
                       '(:a-text :a-coefficient-text
                         :a-coefficient-control :b-coefficient-control
                         :b-coefficient-text :b-text
                         :c-coefficient-control :c-text
                         :c-coefficient-text)
                       :font (make-font-ex nil "Tahoma / ANSI" 11 nil)
                       :height 114 :left 7 :name :coefficient-box :top
                       6 :width 271)))

(defparameter coefficient-dialog-widgets
    (make-coefficient-dialog-widgets))

(defun coefficient-dialog-widgets ()
  (let (window)
    (if* (dolist (dialog-item coefficient-dialog-widgets)
           (and (setq window (window dialog-item)) (windowp window)
                (return t)))
       then (make-coefficient-dialog-widgets)
       else coefficient-dialog-widgets)))
